  Vcl.Grids, Vcl.DBGrids, CRGrid, Vcl.StdCtrls, AdvEdit, Vcl.ExtCtrls, AdvPanel,
  Data.DB, MemDS, DBAccess, MyAccess;

type
  TsearchEmployee = class(TForm)
    AdvPanel2: TAdvPanel;
    Label1: TLabel;
    AdvEdit1: TAdvEdit;
    AdvSmoothButton3: TAdvSmoothButton;
    AdvPanel1: TAdvPanel;
    AdvSmoothLabel1: TAdvSmoothLabel;
    AdvPanel3: TAdvPanel;
